{% use 'PrestaShopBundle:Admin/TwigTemplateForm:bootstrap_4_layout.html.twig' %}

{% block file_widget -%}

    {% if widget is defined and widget == 'mdgImageCategory' %}
        {% if image_url is defined and image_url %}
            <figure class="figure">
                <img class="figure-img img-fluid img-thumbnail" src="{{ asset(image_url) }}"/>
                <figcaption class="figure-caption">
                    <button
                        class="btn btn-outline-danger btn-sm js-form-submit-btn"
                        data-form-submit-url="{{ path('admin_categories_edit', {'categoryId': app.request.get('categoryId'), 'delete-mdgImageCategory': image_delete_key}) }}"
                        data-form-csrf-token="{{ csrf_token('delete-cover-image') }}"
                        type="button"
                    >
                    <i class="material-icons">delete_forever</i> Supprimer
                    </button>
                </figcaption>
            </figure>
        {% endif %}

        {{ parent() }}
    {% endif %}

{%- endblock %}